<h2>プロフィール編集</h2>
<% if @user.errors.any? %>
  <div class="error_box">
    <%= @user.errors.count %> errors prohibited this book from being saved:
    <div class="error">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
<%= form_with model: @user do |f| %>
  <div>
    <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>
  <div>
    <label for="inputName">自己紹介</label>
    <%= f.text_field :introduction, autofocus: true, id:"inputName", placeholder:""%>
  </div>
  <div>
    <label for="inputImage">ProfileImage</label>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>

  <%= f.submit "変更を保存" %>
<% end %>